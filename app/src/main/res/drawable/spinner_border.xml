<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <!-- Background with border -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/> <!-- Background color -->
                    <stroke
                        android:width="2dp"
                        android:color="@color/lightBlue"/> <!-- Border color and width -->
                    <corners android:radius="4dp"/> <!-- Rounded corners -->
                    <padding
                        android:right="12dp"
                        android:left="12dp"/>
                </shape>
            </item>

            <!-- Dropdown arrow icon (on the right) -->
            <item android:drawable="@drawable/ic_arrow_up"
                android:gravity="end"/>
        </layer-list>
    </item>

</selector>
