            <RadioButton
                android:id="@+id/rb_bedroom1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightBlue"
                android:text="1"
                android:layout_marginRight="8dp"
                android:textColor="@color/black"
                />
            <RadioButton
                android:id="@+id/rb_bedroom2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightBlue"
                android:text="2"
                android:layout_marginRight="8dp"
                android:textColor="@color/black"
                />
            <RadioButton
                android:id="@+id/rb_bedroom3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightBlue"
                android:text="3"
                android:layout_marginRight="8dp"
                android:textColor="@color/black"
                />
            <RadioButton
                android:id="@+id/rb_bedroom4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightBlue"
                android:text="4"
                android:layout_marginRight="8dp"
                android:textColor="@color/black"
                />
            <RadioButton
                android:id="@+id/rb_bedroom5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightBlue"
                android:text="5+"
                android:textColor="@color/black"
                />


        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/custom_layout"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:translationY="2dp"
        android:translationX="2dp"
        android:padding="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bathrooms"
            android:paddingHorizontal="5dp"
            android:textColor="@color/lightBlue"
            android:textSize="16sp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold" />
        <RadioGroup
            android:id="@+id/rg_bathrooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rb_bathroom1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightBlue"
                android:text="1"
                android:layout_marginRight="8dp"
                android:textColor="@color/black"
                />
            <RadioButton
                android:id="@+id/rb_bathroom2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightBlue"
                android:text="2"
                android:layout_marginRight="8dp"
                android:textColor="@color/black"
                />
            <RadioButton
                android:id="@+id/rb_bathroom3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightBlue"
                android:text="3"
                android:layout_marginRight="8dp"
                android:textColor="@color/black"
                />
            <RadioButton
                android:id="@+id/rb_bathroom4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightBlue"
                android:text="4"
                android:layout_marginRight="8dp"
                android:textColor="@color/black"
                />
            <RadioButton
                android:id="@+id/rb_bathroom5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightBlue"
                android:text="5+"
                android:textColor="@color/black"
                />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/custom_layout"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:translationY="2dp"
        android:translationX="2dp"
        android:padding="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Floor Number"
            android:paddingHorizontal="5dp"
            android:textColor="@color/lightBlue"
            android:textSize="16sp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/sp_floorNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border"
            android:padding="13dp"
            android:layout_marginBottom="8dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/custom_layout"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:translationY="2dp"
        android:translationX="2dp"
        android:padding="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kitchens"
            android:paddingHorizontal="5dp"
            android:textColor="@color/lightBlue"
            android:textSize="16sp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold" />
        <RadioGroup
            android:id="@+id/rg_kitchens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rb_kitchen0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightBlue"
                android:text="0"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                />
            <RadioButton
                android:id="@+id/rb_kitchen1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightBlue"
                android:text="1"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                />
            <RadioButton
                android:id="@+id/rb_kitchen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightBlue"
                android:text="2+"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/custom_layout"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:translationY="2dp"
        android:translationX="2dp"
        android:padding="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Renter's Religion"
            android:paddingHorizontal="5dp"
            android:textColor="@color/lightBlue"
            android:textSize="16sp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold" />
        <CheckBox
            android:id="@+id/cb_muslim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/lightBlue"
            android:text="Muslim"
            android:textColor="@color/black"
            />
        <CheckBox
            android:id="@+id/cb_hindu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/lightBlue"
            android:text="Hindu"
            android:textColor="@color/black"
            />
        <CheckBox
            android:id="@+id/cb_christian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/lightBlue"
            android:text="Christian"
            android:textColor="@color/black"
            />
        <CheckBox
            android:id="@+id/cb_buddhist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/lightBlue"
            android:text="Buddhist"
            android:textColor="@color/black"
            />
        <CheckBox
            android:id="@+id/cb_others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/lightBlue"
            android:text="Others"
            android:textColor="@color/black"
            android:background="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/custom_layout"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:translationY="2dp"
        android:translationX="2dp"
        android:padding="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other Facilities"
            android:paddingHorizontal="5dp"
            android:textColor="@color/lightBlue"
            android:textSize="16sp"
            android:layout_marginBottom="3dp"
