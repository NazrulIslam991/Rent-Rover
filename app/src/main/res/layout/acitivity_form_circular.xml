<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/custom_layout"
            android:elevation="2dp"
            android:translationZ="2dp"
            android:translationX="2dp"
            android:translationY="2dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Rent Circular"
            android:textAlignment="center"
            android:textColor="@color/lightBlue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/image_feild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/custom_layout"
            android:elevation="2dp"
            android:translationZ="2dp"
            android:translationX="2dp"
            android:translationY="2dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:id="@+id/before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/back_ic" />

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:gravity="center">

                <ImageSwitcher
                    android:id="@+id/post_image"
                    android:layout_width="270dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:inAnimation="@android:anim/slide_in_left"
                    android:outAnimation="@android:anim/slide_out_right" />

                <ImageButton
                    android:id="@+id/delete_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/delete_ic" />
            </RelativeLayout>

            <ImageButton
                android:id="@+id/after"
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:src="@drawable/after_ic" />
        </LinearLayout>




        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/custom_layout"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:translationY="2dp"
        android:translationX="2dp"
        android:padding="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Division"
            android:paddingHorizontal="5dp"
            android:textColor="@color/lightBlue"
            android:textSize="16sp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/sp_division"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border"
            android:padding="13dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="District"
            android:paddingHorizontal="5dp"
            android:textColor="@color/lightBlue"
            android:textSize="16sp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/sp_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border"
            android:padding="13dp"
            android:layout_marginBottom="8dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upazilla"
            android:paddingHorizontal="5dp"
            android:textColor="@color/lightBlue"
            android:textSize="16sp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/sp_upazilla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border"
            android:padding="13dp"
            android:layout_marginBottom="8dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Additional Address"
            android:paddingHorizontal="10dp"
            android:textColor="@color/lightBlue"
            android:textSize="16sp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g: Shahjalal Uposhohor, Block#B, Road#30, House#12"
            android:textColorHint="#545454"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:background="@drawable/custom_button"
            android:padding="10dp"
            android:layout_marginBottom="8dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/custom_layout"
        android:elevation="2dp"
        android:layout_marginHorizontal="15dp"
        android:translationZ="2dp"
        android:translationY="2dp"
        android:translationX="2dp"
        android:padding="10dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Property Type"
            android:paddingHorizontal="5dp"
            android:textColor="@color/lightBlue"
            android:textSize="16sp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold" />
        <RadioGroup
            android:id="@+id/rg_propertyType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RadioButton
                android:id="@+id/rb_family"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightBlue"
                android:text="Apparment for family"
                android:textColor="@color/black"
                android:elevation="1dp"
                android:translationX="1dp"
                android:translationZ="1dp"
                />
            <RadioButton
                android:id="@+id/rb_boysHostel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightBlue"
                android:text="Boys' Hostel"
                android:textColor="@color/black"
                />
            <RadioButton
                android:id="@+id/rb_girlsHostel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightBlue"
                android:text="Girls' Hostel"
                android:textColor="@color/black"
                />
            <RadioButton
                android:id="@+id/rb_boysMess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightBlue"
                android:text="Boys' Mess"
                android:textColor="@color/black"
                />
            <RadioButton
                android:id="@+id/rb_girlsMess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/lightBlue"
                android:text="Girls' Mess"
                android:textColor="@color/black"
                />


        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/custom_layout"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:translationY="2dp"
        android:translationX="2dp"
        android:padding="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bedrooms"
            android:paddingHorizontal="5dp"
            android:textColor="@color/lightBlue"
            android:textSize="16sp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold" />
        <RadioGroup
            android:id="@+id/rg_bedrooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
