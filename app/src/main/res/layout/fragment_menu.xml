<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/p_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingHorizontal="22dp"
        android:paddingVertical="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="Profile"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingVertical="15dp"
        android:layout_marginBottom="25dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="12dp"
            android:id="@+id/view2"
            app:cardCornerRadius="50dp"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">
            <ImageView
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:id="@+id/iv_profilePicture"
                android:layout_gravity="center"
                android:src="@drawable/profile_pic"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                android:layout_centerHorizontal="true">
            </ImageView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jubayer Ashraf Mahin"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="19sp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jubayermahin@gmail.com"
            android:textColor="#C2FFFFFF"
            android:textStyle="normal"
            android:textSize="16sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_bg"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="35dp"
        >
        <RelativeLayout
            android:id="@+id/lo_postedCircular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_layout2"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="7dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/icon_postedCircular"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/poster_1"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/text_postedCircular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted Circulars"
                android:textSize="15.5dp"
                android:layout_toEndOf="@id/icon_postedCircular"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lo_favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_layout2"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="7dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/icon_favorite"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/love"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/text_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorites"
                android:textSize="15.5dp"
                android:layout_toEndOf="@id/icon_favorite"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lo_editProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_layout2"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="7dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/icon_editProfile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/edit"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/text_editProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textSize="15.5dp"
                android:layout_toEndOf="@id/icon_editProfile"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lo_changePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_layout2"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="7dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/icon_changePassword"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/refresh"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/text_changePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="15.5dp"
                android:layout_toEndOf="@id/icon_changePassword"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lo_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_layout2"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="7dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/icon_logout"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/logout"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/text_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="15.5dp"
                android:layout_toEndOf="@id/icon_logout"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>